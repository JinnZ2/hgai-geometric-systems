# Cell 1: Setup
import numpy as np
import matplotlib.pyplot as plt
from hgai.core import MSCalculator, SystemMetrics, TimeSeriesAnalyzer

# Cell 2: Simple System Analysis
"""
Example: Analyzing a small garden ecosystem
"""

garden_metrics = SystemMetrics(
    resonance=0.8,  # Plants, insects, soil microbes well-coupled
    adaptability=0.7,  # Can handle weather variation
    diversity=0.9,  # Many species present
    curiosity=0.4,  # Some exploration (seed dispersal, etc.)
    loss=0.6  # Some nutrients lost, some pests
)

calculator = MSCalculator()
m_s = calculator.calculate(garden_metrics)

print(f"Garden M(S): {m_s:.2f}")
print(f"Interpretation: {calculator.interpret(m_s)}")

# Cell 3: Comparison of Systems
"""
Compare different ecosystem management approaches
"""

systems = {
    'Monoculture Farm': SystemMetrics(0.3, 0.2, 0.1, 0.1, 3.5),
    'Permaculture': SystemMetrics(0.8, 0.7, 0.9, 0.6, 0.8),
    'Wild Forest': SystemMetrics(0.9, 0.8, 0.95, 0.5, 0.4),
}

results = {}
for name, metrics in systems.items():
    results[name] = calculator.calculate(metrics)
    print(f"{name}: M(S) = {results[name]:.2f}")

# Cell 4: Visualization
fig, ax = plt.subplots(figsize=(10, 6))
names = list(results.keys())
values = list(results.values())

colors = ['red' if v < 0 else 'yellow' if v < 3 else 'green' for v in values]
ax.barh(names, values, color=colors)
ax.axvline(x=0, color='black', linestyle='--', linewidth=1)
ax.set_xlabel('M(S) Score')
ax.set_title('System Coherence Comparison')
ax.grid(axis='x', alpha=0.3)
plt.tight_layout()
plt.show()

# Cell 5: Time Series Analysis
"""
Simulate system evolution over time
"""

analyzer = TimeSeriesAnalyzer()

# Simulate permaculture system maturing
for year in range(10):
    # System improves over time as relationships establish
    r_e = min(0.5 + year * 0.04, 0.9)
    a = min(0.6 + year * 0.02, 0.8)
    d = min(0.7 + year * 0.03, 0.95)
    c = 0.5 + np.random.normal(0, 0.05)  # Some variation
    l = max(1.5 - year * 0.1, 0.5)  # Loss decreases
    
    metrics = SystemMetrics(r_e, a, d, c, l)
    m_s = calculator.calculate(metrics)
    analyzer.add_measurement(year, m_s)

trajectory = analyzer.trajectory()
velocity = analyzer.velocity()

print(f"M(S) Velocity: {velocity:.3f} per year")

plt.figure(figsize=(10, 6))
plt.plot(range(10), trajectory, marker='o', linewidth=2)
plt.axhline(y=0, color='red', linestyle='--', label='Collapse Threshold')
plt.axhline(y=5, color='green', linestyle='--', label='High Coherence')
plt.xlabel('Years')
plt.ylabel('M(S) Score')
plt.title('System Evolution: Permaculture Establishment')
plt.legend()
plt.grid(alpha=0.3)
plt.show()
